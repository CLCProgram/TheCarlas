
#include <FastLED.h>

#define NUM_LEDS 1

#define DATA_PIN 3
#define CLOCK_PIN 13

// Define the array of leds
CRGB leds[NUM_LEDS];

void setup() { 
    // Uncomment/edit one of the following lines for your leds arrangement.
    // ## Clockless types ##
    FastLED.addLeds<NEOPIXEL, DATA_PIN>(leds, NUM_LEDS);  // GRB ordering is assumed
  pinMode(2, INPUT);
  pinMode(3, OUTPUT);
}

void loop() { 
  
  int estadoPin = digitalRead(2);

  if (estadoPin == 1){
    digitalWrite (3, HIGH);
      leds[0] = CRGB::Red;
  FastLED.show();
  delay(500);
  }
  else {
    digitalWrite (3, LOW);
      leds[0] = CRGB::Black;
  FastLED.show();
  delay(500);
  }

 
  Serial.println(estadoPin);
}
}
}
}
}
